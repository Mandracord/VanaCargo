{
  "name": "vana-cargo",
  "private": true,
  "version": "1.0.0",
  "description": "Vana Cargo - Offline FFXI inventory viewer",
  "author": "Mandracord Team",
  "license": "MIT",

  "main": "electron/main.js",

  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"vite\" \"npm:electron:start\"",
    "electron:start": "wait-on http://localhost:5173 && electron .",
    "electron:build": "vite build && tsc -p tsconfig.electron.json && electron-builder"
  },

  "dependencies": {
    "vue": "^3.5.24",
    "vue-router": "^4.6.4"
  },

  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^24.13.3",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "@vitejs/plugin-vue": "^6.0.1",
    "wait-on": "^7.2.0",
    "concurrently": "^8.2.2"
  },

  "build": {
    "appId": "com.vanacargo.app",
    "productName": "Vana Cargo",
    "asar": true,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "win": {
      "target": ["portable"]
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"]
    }
  }
}
