<Window x:Class="VanaCargoApp.RenameCharacterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rename Character"
        Background="{DynamicResource AppBackgroundBrush}"
        Foreground="{DynamicResource AppForegroundBrush}"
        Width="360"
        Height="160"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Display name:" />
        <TextBox Name="NameBox" Grid.Row="1" Margin="0,6,0,0" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="90" Margin="0,0,8,0" IsDefault="True" Click="OnOk" />
            <Button Content="Cancel" Width="90" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
